#include<bits/stdc++.h>
using namespace std;

int main(){
    double a,b;
    char symbol;

    cout<<"Enter the two numbers to which you want to perform an operation: "<<endl;
    cin>>a>>b;

    cout<<"Enter the symbol to perform an operation(+,-,*,/): "<<endl;
    cin>>symbol;

        switch(symbol){
            case '+':
                        cout<<"The Addition of given two numbers is: "<<fixed<<setprecision(3)<<a+b<<endl;
                        break;
            case '-':
                        cout<<"The Subtraction of given two numbers is: "<<fixed<<setprecision(3)<<a-b<<endl;
                        break;
            case '*':
                        cout<<"The Product of given two numbers is: "<<fixed<<setprecision(3)<<a*b<<endl;
                        break;
            case '/':
                        if(a==0 || b==0){
                            cout<<"Division by zero is not allowed."<<endl;
                            return 1;
                        }else{
                            cout<<"The Division of given two numbers is: "<<fixed<<setprecision(3)<<a/b<<endl;
                        }
                        break;
            default:
            cout<<"Invalid operator."<<endl;
            return 1;
        }

        return 0;
    }
